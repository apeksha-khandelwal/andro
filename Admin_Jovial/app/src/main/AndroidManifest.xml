<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apekshakhandelwal.admin_jovial">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Jovial_Admin"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".add_package"
            android:label="Add Package"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Avail_events"
            android:label="Events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_event"
            android:label="Add Events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_service"
            android:label="Add Services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Avail_packages"
            android:label="Packages"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Avail_services"
            android:label="Services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Current_events"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".grid" />
        <activity
            android:name=".Report"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Package" />
        <activity android:name=".EventInfo" />
        <activity
            android:name=".EmailPasswordActivity"
            android:label="@string/title_activity_email_password"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register"></activity>
    </application>

</manifest>
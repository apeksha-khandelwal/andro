<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apekshakhandelwal.farewell.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/calcBackground">

        <EditText
            android:id="@+id/textArea"
            android:layout_width="100pt"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/deleteButton"
            android:layout_alignBottom="@+id/deleteButton"
            android:layout_alignParentLeft="true"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:onClick="delete"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20pt"
            android:text="Delete"
            android:textSize="8pt" />

        <LinearLayout
            android:id="@+id/FirstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textArea"
            android:layout_marginTop="45pt">

            <Button
                android:id="@+id/floatingActionButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="1"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="2"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="3"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButtonMore"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text=">"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FirstRow">

            <Button
                android:id="@+id/floatingActionButton4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="4"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="5"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="6"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButtonLess"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="<"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondRow">

            <Button
                android:id="@+id/floatingActionButton7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="7"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="8"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="9"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButtonNot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="!"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thirdRow">

            <Button
                android:id="@+id/floatingActionButtonI"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="i"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButton0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/floatingActionButtonU"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8pt"
                android:text="U"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10pt"
                android:onClick="unlock"
                android:text="Done"
                android:textSize="10pt" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

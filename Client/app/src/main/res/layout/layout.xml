<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:divider="@android:color/transparent"
    android:dividerHeight="10px"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/Dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/admin"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/emailAdd"
        android:text="email"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 June '17"
        android:id="@+id/date"
        android:layout_below="@+id/Dp"
        android:layout_alignRight="@+id/review"
        android:layout_alignEnd="@+id/review" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:background="#A9EAFD"
        android:rating="4.3"
        android:progressTint="#000"
        android:layout_below="@+id/emailAdd"
        android:layout_toRightOf="@+id/Dp"
        android:layout_toEndOf="@+id/Dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/review"
        android:textSize="20dp"
        android:text="Found it Real Experience to Enjoy\nImpressive Service\nTasty food!!"
        android:layout_below="@+id/Dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

</RelativeLayout>